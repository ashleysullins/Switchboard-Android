<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ask"
        android:id="@+id/typeLabel"
        android:enabled="true"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/black"
        android:padding="2dp"
        android:layout_below="@+id/askLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/dateLabel"
        android:layout_toStartOf="@+id/dateLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Wednesday, October 30th at 12:00PM"
        android:id="@+id/dateLabel"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/black"
        android:padding="2dp"
        android:layout_alignTop="@+id/typeLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is an ask"
        android:id="@+id/askLabel"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>